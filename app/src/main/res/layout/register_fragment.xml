<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:background="@drawable/loginbak"
  android:padding="10dp"
  >

  <ImageView
    android:layout_width="200dp"
    android:layout_height="100dp"
    android:layout_gravity="center"
    android:src="@drawable/wifi"
    android:layout_marginTop="30dp"
    />
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#511a18"
    android:layout_marginTop="40dp"
    >
    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Register"
      android:textSize="20sp"
      android:gravity="center"
      android:layout_gravity="center"
      android:textColor="@color/textcolor"

      />

  </LinearLayout>
  <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="textEmailAddress"
    android:ems="10"
    android:id="@+id/edt_username"
    android:hint="Enter Name"
    android:drawableStart="@mipmap/account"
    android:layout_marginTop="20dp"
    android:textColor="#FFF"
    android:drawablePadding="5dp"
    android:textColorHint="@color/textcolor"/>
  <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="number"
    android:maxLength="10"
    android:ems="10"
    android:drawableStart="@drawable/mobile"
    android:id="@+id/edt_usermobno"
    android:hint="Enter Mobile Number"
    android:textColor="#FFF"
    android:drawablePadding="5dp"
    android:textColorHint="@color/textcolor"/>
  <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="text"
    android:ems="10"
    android:id="@+id/edt_useradd"
    android:hint="Enter Address"
    android:drawableStart="@drawable/loca"
    android:textColor="#FFF"
    android:textColorHint="@color/textcolor"/>
  <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="textPassword"
    android:ems="10"
    android:id="@+id/edt_upassword"
    android:drawableLeft="@mipmap/lock"
    android:hint="Enter Password"
    android:layout_marginTop="10dp"
    android:textColor="#FFF"
    android:paddingLeft="0dp"
    android:drawablePadding="5dp"
    android:textColorHint="@color/textcolor"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    >
    <Button
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:textSize="20sp"
      android:textStyle="bold"
      android:id="@+id/btn_signup"
      android:text="Cancel"
      android:textColor="@color/textcolor"
      android:background="@drawable/selector_xml_btn_yellow"
      />
    <Button
      android:layout_width="0dp"
      android:background="@drawable/selector_xml_btn_yellow"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:textSize="20sp"
      android:textStyle="bold"
      android:id="@+id/btn_can"
      android:textColor="@color/textcolor"
      android:text="@string/signup"

      android:layout_marginStart="5dp"
      />
  </LinearLayout>
</LinearLayout>
